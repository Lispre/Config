# Settings {{{1
always-display-description true
browser "xdg-open"
external-url-viewer "urlview"
ignore-mode "display"
keep-articles-days 90
notify-program "notify-send"
refresh-on-startup yes

# Sources {{{1
urls-source "local"

# Theme {{{1
color listnormal color248 default
color listfocus white color235
color article color248 default
color info green default

highlight article "^Feed:.*" color34 default
highlight article "^(Title|Author):.*" color40 default
highlight article "^Link:.*" color24 default
highlight article "^Date:.*" color30 default

# Podbeuter {{{1
player "mplayer"
download-path "~/Podcasts"
max-downloads 3

# Bindings {{{1
bind-key k      prev-unread
bind-key j      next-unread
